<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Module"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_module_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Module"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/textView_module"/>

    <TextView
        android:id="@+id/textView_marks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Final Marks"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/textView_results"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView_module"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_marks_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Final Marks"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/textView_results_result"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView_module_result"
        app:layout_constraintTop_toBottomOf="@+id/textView_marks"/>


    <TextView
        android:id="@+id/textView_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Results"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_marks"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView_results_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Results"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_marks_result"
        app:layout_constraintTop_toBottomOf="@+id/textView_results" />

</androidx.constraintlayout.widget.ConstraintLayout>